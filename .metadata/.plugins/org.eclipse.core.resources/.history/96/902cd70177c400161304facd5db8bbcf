
public class Letter {

	private String[] letter;

	public Letter(String[] letter){
		this.letter = letter;
	}
	
	public String getLetterLine(int line){
		return letter[line];
	}
	
	public int[] getLeadingMatrix(){
		return null;
	}

	public int[] getTrailingMatrix(){
		return null;
	}
	
	public int getWidth(){
		int width = 0;
		for(String line : letter){
			if(line.length() > width)
				width = line.length();
		}
		return width;
	}
	
	
}
